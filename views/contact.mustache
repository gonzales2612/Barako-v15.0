<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3b241a', // Navbar background
                        accent: '#EBD9C1', // Text and button accents
                        secondary: '#744f36', // Form background
                    },
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                    },
                },
            },
        };
    </script>
</head>
<body class="bg-accent font-sans flex flex-col min-h-screen">

<!-- Navigation Bar -->
<nav class="bg-primary shadow-md">
    <div class="container mx-auto flex justify-between items-center py-4 px-6">
        <a href="/">
            <img src="/assets/logo.png" class="h-12" alt="Logo">
        </a>
        <ul class="hidden md:flex space-x-6">
            <li>
                <a href="/" class="text-accent relative after:block after:w-0 after:h-[2px] after:bg-accent after:transition-all after:duration-300 after:mt-[3px] hover:after:w-full">
                    Home
                </a>
            </li>
            <li>
                <a href="/menu" class="text-accent relative after:block after:w-0 after:h-[2px] after:bg-accent after:transition-all after:duration-300 after:mt-[3px] hover:after:w-full">
                    Menu
                </a>
            </li>
            <li>
                <a href="/faqs" class="text-accent relative after:block after:w-0 after:h-[2px] after:bg-accent after:transition-all after:duration-300 after:mt-[3px] hover:after:w-full">
                    FAQs
                </a>
            </li>
            <li>
                <a href="/contact" class="text-accent relative after:block after:w-0 after:h-[2px] after:bg-accent after:transition-all after:duration-300 after:mt-[3px] hover:after:w-full">
                    Contact
                </a>
            </li>
            <li>
                <a href="/rate-menu" class="text-accent relative after:block after:w-0 after:h-[2px] after:bg-accent after:transition-all after:duration-300 after:mt-[3px] hover:after:w-full">
                    Rate
                </a>
            </li>
        </ul>
        <div class="flex space-x-4">
            {{#username}}
                <span class="text-white">Welcome, <strong>{{username}}</strong></span>
                <a href="/?logout=true" class="bg-red-500 text-white py-1 px-4 rounded hover:bg-red-600 transition">Logout</a>
            {{/username}}
            {{^username}}
                
                <a href="/login" class="px-6 py-2 border border-white bg-white text-primary rounded-full hover:bg-primary hover:text-white transition">Admin Login</a>
            {{/username}}
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="flex-grow container mx-auto py-12 px-6">
    <h1 class="text-4xl font-bold text-center text-primary mb-10">Contact Us</h1>

    <!-- Contact Form -->
    <form 
        id="contactForm" 
        action="/contact/submit" 
        method="POST" 
        class="w-full max-w-lg mx-auto bg-secondary p-6 rounded-lg shadow-lg"
    >
        <!-- Name -->
        <div class="mb-6">
            <label for="name" class="block text-accent font-medium mb-2">Your Name</label>
            <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none"
            >
        </div>

        <!-- Email -->
        <div class="mb-6">
            <label for="email" class="block text-accent font-medium mb-2">Your Email</label>
            <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none"
            >
        </div>

        <!-- Message -->
        <div class="mb-6">
            <label for="message" class="block text-accent font-medium mb-2">Your Message</label>
            <textarea 
                id="message" 
                name="message" 
                rows="4" 
                required 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none"
            ></textarea>
        </div>

        <!-- Submit Button -->
        <div>
            <button 
                type="submit" 
                class="w-full bg-primary text-white font-bold py-3 rounded-lg hover:bg-[#230C02] transition focus:outline-none focus:ring-2 focus:ring-secondary"
            >
                Send Message
            </button>
        </div>
    </form>

    <!-- Back to Home Link -->
    <div class="text-center mt-6">
        <a href="/" class="text-primary hover:underline">Go to Home</a>
    </div>
</div>

<!-- Footer -->
<footer class="bg-primary text-accent text-center py-4 mt-auto">
    <p>Â© 2024 Barako. All Rights Reserved.</p>
</footer>

<script>
    // Add event listener to the form
    document.getElementById('contactForm').addEventListener('submit', function (event) {
        // Prevent the default form submission
        event.preventDefault();
        
        // Show a notification
        alert('Thank you for your message!');
        
        // Optionally, submit the form after showing the message
        this.submit();
    });
</script>

</body>
</html>
